<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/jquery.dataTables.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.dataTables.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div >

        <div class="container">

            <div class="navbar-header">

                <a title="Home" href="~/Productos/Index"> <img src="~/Imagenes/LogoSunshine.png" alt="Home" width="150"> </a>

                @Html.ActionLink("Adicionar Productos", "Index", "Productos", new { area = "" }, new { @class = "barra" })
            </div>
            <br /> <br />
            <br />
            <div>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <div>
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Adicionar Productos", "MantenimientoProducto", "Productos")</li>
                        <li>@Html.ActionLink("Listar Productos", "Index", "Productos")</li>
                        <li>@Html.ActionLink("Variedades", "Index", "Variedades")</li>
                        <li>@Html.ActionLink("Grados", "Index", "Gradoes")</li>
                    </ul>
                </div>

            </div>

        </div>
        </div>
    <hr/>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer align="center">
            <p>  &copy; @DateTime.Now.Year - Autor: Edison Segovia. Todos los derechos reservados. </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
