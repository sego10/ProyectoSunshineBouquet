@model IEnumerable<ProyectoSunshineBouquet.Models.Producto>

@{
    ViewBag.Title = "Index";
}

<h2>Productos</h2>

<p>
    @Html.ActionLink("Agregar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductoCodigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductoNombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductoEspecie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductoVariedad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductoGrado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ProductoCodigo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProductoNombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProductoEspecie)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProductoVariedad)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProductoGrado)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ProductoId }) |
        @Html.ActionLink("Details", "Details", new { id = item.ProductoId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ProductoId })
    </td>
</tr>
}

</table>
